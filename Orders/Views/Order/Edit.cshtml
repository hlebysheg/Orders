
@model Orders.Models.DB.Order
	<div class="modal-content">
    <div class="modal-header">
        <h4>Create order</h4>
        <button class="btn-close" data-bs-dismiss="modal" area-hidden="true"></button>
    </div>
    <div class="modal-body">
        <dl class="dl-horizontal">
            <form method="post" action="/Order/Edit" id="edit">
@*            @using (Html.BeginForm("Order", "", FormMethod.Post))
            {*@
                <div class="form-group mb-2">
                    <label for="Id">Id</label>
                    <input type="text" class="form-control" readonly="readonly" name="Id" value="@Model.Id" id="Id" placeholder="col-form-label-sm" required>
                    @*<input type="text" class="form-control" placeholder="Number" />*@
                </div>
                <div class="form-group mb-2">
                    <label for="Number">Number</label>
                    @Html.TextBoxFor(m => m.Number, new { @class = "form-control", id="Number", placeholder="Number", @required  = "required" })
                    @*<input type="text" class="form-control" placeholder="Number" />*@
                </div>
                <div class="form-group mb-2">
                    <label for="ProviderId">ProviderId</label>
                    @Html.TextBoxFor(m => m.ProviderId, new { @class = "form-control", id="ProviderId", placeholder = "provider", @required  = "required" })
                    @*<input type="text" class="form-control" placeholder="ProviderId" />*@
                </div>
                <div class="form-group mb-2">
                    <label for="startDate">Order Date</label>
                    <input type="date" class="form-control" name="Date" value="@Model.Date.ToString("yyyy-MM-dd")" id="Date" placeholder="col-form-label-sm" required>
                    @*<input id="startDate" class="form-control" type="date" />*@
                </div>
                <div class="form-group mb-2">
                    <input type="submit" class="form-control" value="Save" />
                </div>
@*             }*@
            </form>
        </dl>
    </div>
</div>