@model Orders.Models.DTO.OrderDto
<div class="modal-content">
	<div class="modal-header">
		<h4>Create order</h4>
		<button class="btn-close" data-bs-dismiss="modal" area-hidden="true"></button>
	</div>
	<div class="modal-body">
		<dl class="dl-horizontal">
			<form method="post" action="/Order" id="create">
				<div class="form-group mb-2">
					<label for="Number">Number</label>
					@Html.TextBoxFor(m => m.Number, new { @class = "form-control", id="Number", placeholder="Number", @required  = "required" })
				</div>
				<div class="form-group mb-2">
					<label for="ProviderId">Provider</label>
					<select class="form-select" aria-label="Default select example" name="ProviderId">
						@foreach (var d in @ViewBag.provider)
						{
							<option value="@d.Id">@d.Name</option>
						}
					</select>
				</div>
				<div class="form-group mb-2">
					<label for="startDate">Order Date</label>
					@Html.TextBoxFor(m => m.Date, new { id="startDate", @class = "form-control", type="date", @required  = "required" })
				</div>
				<div class="form-group mb-2">
					<input type="submit" class="form-control" value="Отправить" />
				</div>
			</form>
		</dl>
	</div>
</div>